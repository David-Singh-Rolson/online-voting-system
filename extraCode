    body * {
        visibility: hidden; /* Hide everything by default */
    }
    .printable, .printable * {
        visibility: visible; /* Make printable elements visible */
    }
    .printable {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        padding: 0;
    }

    .block {
        margin: 0; /* Remove margin for print */
        padding: 0;
    }
    .block canvas {
        width: 100% !important; /* Ensure canvas width is full for print */
